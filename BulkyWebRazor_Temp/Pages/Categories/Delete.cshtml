@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post" class="p-2">
	@* 	<input asp-for="Id" hidden /> *@
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h1 class="text-primary"> Edit Category</h1>
		</div>
		<div asp-validation-summary="All"></div>
		<hr />

		<div class="mb=3 p-1">
			<label asp-for="Category.Name" class="p-1"></label>
			<input asp-for="Category.Name" type="text" class="form-control" disabled/>
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>

		<div class="mb=3 p-1">
			<label asp-for="Category.DisplayOrder" class="p-1"></label>
			<input asp-for="Category.DisplayOrder" class="form-control" disabled/>
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-success mt-4 form-control">Delete Category</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/Categories/Index" class="btn btn-danger mt-4 form-control">Go Back To List </a>
			</div>
		</div>


	</div>
</form>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
